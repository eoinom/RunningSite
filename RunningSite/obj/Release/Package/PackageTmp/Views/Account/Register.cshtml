@model RunningSite.Models.Account

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Register</h2>

    <p>
        @ViewBag.Status
    </p>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <p>
            <span class="newline">
                @Html.LabelFor(a => a.FirstName, "First Name:", new { @class = "label" })
            </span>
            @Html.TextBoxFor(a => a.FirstName)
            @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "error" })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(a => a.LastName, "Surname:", new { @class = "label" })
            </span>
            @Html.TextBoxFor(a => a.LastName)
            @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "error" })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(a => a.Email, "Email address:", new { @class = "label" })
            </span>
            @Html.TextBoxFor(a => a.Email)
            @Html.ValidationMessageFor(a => a.Email, "", new { @class = "error" })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(a => a.Password, "Password (min 6 characters):", new { @class = "label" })
            </span>
            @Html.PasswordFor(a => a.Password)
            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "error" })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(a => a.ConfirmPassword, "Confirm Password:", new { @class = "label" })
            </span>
            @Html.PasswordFor(a => a.ConfirmPassword)
            @Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "error" })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(a => a.Country, "Country (of residence):", new { @class = "label" })
            </span>
            @Html.TextBoxFor(a => a.Country)
            @*@Html.DropDownListFor(a => a.Country, new SelectList(Country, "Name", "Name"))*@
            @Html.ValidationMessageFor(a => a.Country, "", new { @class = "error" })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(a => a.Gender, "Gender:", new { @class = "label" })
            </span>
            @Html.EnumDropDownListFor(a => a.Gender)
            @Html.ValidationMessageFor(a => a.Gender, "", new { @class = "error" })
        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(a => a.DOB, "Date of Birth:", new { @class = "label" })
            </span>
            @Html.EditorFor(a => a.DOB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.DOB, "", new { @class = "error" })
        </p>
        <p>
            @Html.CheckBoxFor(a => a.NewsletterSub)Keep up to date: subscribe to the Dingle Running Festival Newsletter
        </p>
        <p>
            <input type="submit" value="Register" />
        </p>
    }
</div>




